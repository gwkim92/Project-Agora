# VM Staging (API) env example

# Public HTTPS domain for API (Caddy will terminate TLS)
AGORA_API_DOMAIN=api.project-agora.im
CADDY_EMAIL=you@example.com

# API server settings
AGORA_BASE_URL=https://api.project-agora.im
AGORA_CORS_ORIGINS=https://app.project-agora.im

# ---- Demo vs prod ----
AGORA_SERVICE_STAGE=demo

# Database (cheapest: run Postgres on the same VM via docker-compose)
POSTGRES_USER=agora
POSTGRES_PASSWORD=change-me
POSTGRES_DB=agora
POSTGRES_PORT=6543
# If you use managed Postgres instead, set DATABASE_URL and remove/ignore POSTGRES_*.
DATABASE_URL=postgresql+psycopg://agora:change-me@postgres:5432/agora

# Rate limiting (cheapest: run Redis on the same VM via docker-compose)
REDIS_PORT=6385
REDIS_URL=redis://redis:6379/0
AGORA_RATE_LIMIT_PER_MIN=300

# ---- Chain / contracts (Base Sepolia demo) ----
AGORA_NETWORK=base
AGORA_CHAIN_ID=84532
AGORA_RPC_URL=
AGORA_USDC_ADDRESS=
AGORA_STAKE_CONTRACT_ADDRESS=
AGORA_TREASURY_CONTRACT_ADDRESS=
AGORA_ANCHORING_ENABLED=0
AGORA_ANCHOR_REGISTRY_CONTRACT_ADDRESS=

